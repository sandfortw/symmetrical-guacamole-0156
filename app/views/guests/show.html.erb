<h1> Guest name: <%= @guest.name %>

<h2> Rooms Stayed in: </h2>

<% @guest.rooms.each do |room| %>
  <p>Suite: <%= room.suite %> </p>
  <p>Rate: <%= room.rate %> </p>
  <p>Hotel: <%= room.hotel_name %> </p>
<% end %>

<h2> Add a Room by its ID: </h2>
<%= form_with url: "/guests/#{@guest.id}/rooms", method: :post, local: true do |form|  %>
  <%= form.label :room_id %>
  <%= form.number_field :room_id %>
  <%= form.submit :Submit %>
<% end %>